pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
function _init()
	x = 64
	y = 64
end

function _update()
	if btn(⬅️) then x-=1 end
	if btn(➡️) then x+=1 end
	if btn(⬆️) then y-=1 end
	if btn(⬇️) then y+=1 end
end

function _draw()
	cls()
	rectfill(20,20,60,60,8)
	circfill(90,40,15,12)

	color_here = pget(x,y+1)
	
	-- crosshair
	line()
	line(x,y,x,y+2,7)
	line()
	line(x-1,y+1,x+1,y+1,7)

	print("color: "..color_here,0,0)
end
