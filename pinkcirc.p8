__lua__
function _init()
	x=64
	y=64
	timer=0
	blink_timer=0
end

function _update()
	timer+=1
	blink_timer+=1 
	
	if (btn(⬅️)) then x-=3 end
	if (btn(➡️)) then x+=3 end
	if (btn(⬆️)) then y-=3 end
	if (btn(⬇️)) then y+=3 end
	
	if x<7 then x=7	end
	if x>120 then x=120 end
	if y<14 then y=14	end
	if y>120 then y=120 end
end
	
function _draw()
	cls(5)
	line(0,6,128,6,7)
	if blink_timer % 30<15 then
		circfill(x,y,7,14)
 end
 print(timer,0,0)
end
